#!/usr/bin/env bash

random_wallpaper=$(find ~/Pictures/Wallpapers -name "*.png" -o -name "*.jpg" | sort -R | tail -n 1)
focused_monitor=$(hyprctl monitors | awk '/^Monitor/{name=$2} /focused: yes/{print name}')

if [ -z "$1" ]; then
    :
elif [ "$1" == "--random" ]; then
    swww img -o $focused_monitor ${random_wallpaper}
    wal -i ${random_wallpaper}
    pywalfox update
elif [ "$1" == "--default" ]; then
    swww img -o $focused_monitor ~/Pictures/Wallpapers/Tokyo_Pink.png
    wal -i  ~/Pictures/Wallpapers/Tokyo_Pink.png
    pywalfox update
else
    swww img -o $focused_monitor ~/Pictures/Wallpapers/$1
    wal -i ~/Pictures/Wallpapers/$1
    pywalfox update
fi
