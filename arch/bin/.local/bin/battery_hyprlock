#!/bin/bash

case $HOSTNAME in
  (thinkpad) BAT_DEVICE=BAT0;;
  (framework) BAT_DEVICE=BAT1;;
esac

BAT_LEVEL=$(cat /sys/class/power_supply/$BAT_DEVICE/capacity)
STATUS=$(cat /sys/class/power_supply/$BAT_DEVICE/status)

if [ $STATUS = 'Discharging' ]; then
  if [ $BAT_LEVEL -lt 15 ]; then
    echo "􀛪 $BAT_LEVEL%"
  elif [ $BAT_LEVEL -lt 25 ]; then
    echo "􀛩 $BAT_LEVEL%"
  elif [ $BAT_LEVEL -lt 50 ]; then
    echo "􀺶 $BAT_LEVEL%"
  elif [ $BAT_LEVEL -lt 80 ]; then
    echo "􀺸 $BAT_LEVEL%"
  elif [ $BAT_LEVEL -lt 100 ]; then
    echo "􀛨 $BAT_LEVEL%"
  fi
elif [ $STATUS = 'Charging' ]; then
  echo "􀢋 $BAT_LEVEL%"
fi
