# Retrieve email and password using Apple Keychain (security)
set my_email = `/usr/bin/security find-generic-password -s mutt | grep 'acct' | awk -F'=' '{print $2}' | tr -d '"'`
set my_password = `/usr/bin/security find-generic-password -w -s 'mutt'`

# Set IMAP settings
set folder = "imaps://${my_email}@imap.gmail.com:993"
set imap_pass = ${my_password}
set imap_check_subscribed
set imap_keepalive = 300

# Set SMTP settings
set smtp_url = "smtps://${my_email}@smtp.gmail.com:465"
set smtp_pass = ${my_password}
set smtp_authenticators="gssapi:login"

# Set view modes
auto_view text/html text/calendar application/ics
alternative_order text/html text/plain text/enriched text/*

# General settings
set from = ${my_email}
set realname = "Tanay Pant"
set reply_to
set include
set mail_check = 6

# Status Bar
set status_on_top
set status_chars = " *%A"
set status_format = "[ Folder: %f ] [%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]%>â”€%?p?( %p postponed )?"

set spoolfile = "+INBOX"
set record = "+[Gmail]/Sent Mail"
set postponed = "+[Gmail]/Drafts"

# Setting for sidebar
set sidebar_visible
set sidebar_format="%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats

set beep=no
set sort=reverse-date
set sort_aux=last-date-received

set mailcap_path = "~/.config/mutt/mailcap"

source nord.muttrc
